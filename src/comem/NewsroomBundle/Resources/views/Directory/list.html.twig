{% extends "::layout.html.twig" %}

{% block content %}

    {% for ad in ads %}
        <article>
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.description }}</p>
            <p>{{ ad.link }}</p>
            <p>{{ ad.address }}</p>
            <p>{{ ad.phone }}</p>
            <p>{{ ad.grade }}</p>
            <p>{{ ad.category }}</p>
        </article>
    {% else %}
        <p>Il n'y a pas d'articles dans le guide.</p>
    {% endfor %}

{% endblock %}