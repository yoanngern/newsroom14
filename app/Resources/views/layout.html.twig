<!DOCTYPE html>
<html lang="fr">
    <head>
	<meta charset="utf-8">
        <title>{% block title %}Newsroom{% endblock %}</title>
        <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
        <link rel="icon" type="image/png" href="images/favicon.png" />
        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
        {% endblock %}
        
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-1.11.0.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
        
    </head>
    <body>
        
            
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('comem_newsroom_home') }}">Intro</a></li>
                    <li><a class="{% if theme.ref == 'alimentation' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'alimentation'}) }}">Alimentation</a></li>
                    <li><a class="{% if theme.ref == 'hygiene' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'hygiene'}) }}">Hygiène</a></li>
                    <li><a class="{% if theme.ref == 'transports' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'transports'}) }}">Transports</a></li>
                    <li><a class="{% if theme.ref == 'logement' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'logement'}) }}">Logement</a></li>
                    <li><a class="{% if theme.ref == 'social' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'social'}) }}">Relations sociales</a></li>
                    <li><a class="{% if theme.ref == 'sante' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'sante'}) }}">Santé</a></li>
                    <li><a class="{% if theme.ref == 'vetements' %}actif{% endif %}" href="{{ path('comem_newsroom_theme', {'theme': 'vetements'}) }}">Vêtements</a></li>
                </ul>
            </nav>
        </header>
        
        <article id="main">
            {% block content %}
            {% endblock %}
        </article>
        
    </body>
</html>
