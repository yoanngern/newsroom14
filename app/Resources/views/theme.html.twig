{% extends "::layout.html.twig" %}

{% block content %}
    
    <section class="top">
    
        <div id="topBg"></div>
    
        <section class="stats">
            {% block stats %}{% endblock %}
        </section>
         
        <header>
            <h1><span>{{ theme.title }}</span></h1>
            {% block lead %}{% endblock %}
            
        </header>
        
        {% block article_top %}{% endblock %}
    
    </section>
    
    <section class="bottom">
        {% block article_bottom %}{% endblock %}
        
        {% if ads|length %}
            <section id="help">
                <h1>Les aides</h1>
                
                {% for ad in ads %}
                    <section>
                        <h1>{{ ad.title }}</h1>
                        <p>{{ ad.description }}</p>
                        <p>{{ ad.link }}</p>
                    </section>
                {% endfor %}
            </section>
        {% endif %}
        
        <footer>
            <a href="http://www.comem.ch">comem+</a>
            <a href="{{ path('comem_newsroom_directory') }}">Annuaire</a>
        </footer>
    </section>
    
{% endblock %}
