{% extends "::layout.html.twig" %}

{% block content %}
    
    <section class="top">
    
        <section class="stats">
            {% block stats %}{% endblock %}
        </section>
         
        <header>
            <h1><span>{% if theme.bigTitle|length %}{{ theme.bigTitle }}{% else %}{{ theme.title }}{% endif %}</span></h1>
            {% block lead %}{% endblock %}
            
        </header>
        
        {% block article_top %}{% endblock %}
    
    </section>
    
    <section class="bottom">
        {% block article_bottom %}{% endblock %}
    </section>
{% endblock %}

{% block footer %}
    
    {% if ads|length %}
        <section id="help">
            <h1>Les aides</h1>
            
            {% for ad in ads %}
                <section>
                    <h1>{{ ad.title }}</h1>
                    <p>{{ ad.description }}</p>
                    <p>{{ ad.link }}</p>
                </section>
            {% endfor %}
        </section>
    {% endif %}
    {{ parent() }}
{% endblock %}